{
  "dashboard": {
    "title": "UNRDF - System Overview",
    "description": "Main dashboard for UNRDF monitoring - health, performance, and OTEL validation",
    "tags": ["unrdf", "overview", "production"],
    "timezone": "utc",
    "schemaVersion": 39,
    "version": 1,
    "refresh": "30s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "System Health",
        "type": "stat",
        "gridPos": { "x": 0, "y": 0, "w": 6, "h": 4 },
        "targets": [
          {
            "expr": "unrdf_service_info",
            "legendFormat": "Status",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "mappings": [
              { "value": 1, "text": "HEALTHY", "color": "green" },
              { "value": 0, "text": "DOWN", "color": "red" }
            ],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": 0, "color": "red" },
                { "value": 1, "color": "green" }
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "title": "OTEL Validation Score",
        "type": "gauge",
        "gridPos": { "x": 6, "y": 0, "w": 6, "h": 4 },
        "targets": [
          {
            "expr": "unrdf_otel_validation_score",
            "legendFormat": "Score",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "min": 0,
            "max": 100,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": 0, "color": "red" },
                { "value": 50, "color": "yellow" },
                { "value": 80, "color": "green" }
              ]
            },
            "unit": "none"
          }
        },
        "options": {
          "showThresholdLabels": true,
          "showThresholdMarkers": true
        }
      },
      {
        "id": 3,
        "title": "Request Rate",
        "type": "graph",
        "gridPos": { "x": 12, "y": 0, "w": 6, "h": 4 },
        "targets": [
          {
            "expr": "rate(unrdf_requests_total[5m])",
            "legendFormat": "Requests/sec",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "reqps"
          }
        }
      },
      {
        "id": 4,
        "title": "Error Rate",
        "type": "graph",
        "gridPos": { "x": 18, "y": 0, "w": 6, "h": 4 },
        "targets": [
          {
            "expr": "rate(unrdf_errors_total[5m]) / rate(unrdf_requests_total[5m])",
            "legendFormat": "Error Rate",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percentunit",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": 0, "color": "green" },
                { "value": 0.01, "color": "yellow" },
                { "value": 0.05, "color": "red" }
              ]
            }
          }
        }
      },
      {
        "id": 5,
        "title": "Request Latency (P50/P95/P99)",
        "type": "graph",
        "gridPos": { "x": 0, "y": 4, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "histogram_quantile(0.50, rate(unrdf_request_duration_seconds_bucket[5m]))",
            "legendFormat": "P50",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.95, rate(unrdf_request_duration_seconds_bucket[5m]))",
            "legendFormat": "P95",
            "refId": "B"
          },
          {
            "expr": "histogram_quantile(0.99, rate(unrdf_request_duration_seconds_bucket[5m]))",
            "legendFormat": "P99",
            "refId": "C"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s"
          }
        },
        "options": {
          "legend": {
            "displayMode": "table",
            "placement": "bottom",
            "calcs": ["mean", "max"]
          }
        }
      },
      {
        "id": 6,
        "title": "Memory Usage",
        "type": "graph",
        "gridPos": { "x": 12, "y": 4, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "unrdf_memory_heap_used_bytes",
            "legendFormat": "Heap Used",
            "refId": "A"
          },
          {
            "expr": "unrdf_memory_heap_total_bytes",
            "legendFormat": "Heap Total",
            "refId": "B"
          },
          {
            "expr": "unrdf_memory_rss_bytes",
            "legendFormat": "RSS",
            "refId": "C"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "bytes"
          }
        }
      },
      {
        "id": 7,
        "title": "Test Quality Metrics",
        "type": "stat",
        "gridPos": { "x": 0, "y": 12, "w": 8, "h": 4 },
        "targets": [
          {
            "expr": "unrdf_test_failures_total / unrdf_test_total",
            "legendFormat": "Test Failure Rate",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percentunit",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": 0, "color": "green" },
                { "value": 0.05, "color": "yellow" },
                { "value": 0.1, "color": "red" }
              ]
            }
          }
        }
      },
      {
        "id": 8,
        "title": "Slow Queries",
        "type": "graph",
        "gridPos": { "x": 8, "y": 12, "w": 8, "h": 4 },
        "targets": [
          {
            "expr": "rate(unrdf_slow_queries_total[5m])",
            "legendFormat": "Slow Queries/sec",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "ops"
          }
        }
      },
      {
        "id": 9,
        "title": "Active Alerts",
        "type": "table",
        "gridPos": { "x": 16, "y": 12, "w": 8, "h": 4 },
        "targets": [
          {
            "expr": "ALERTS{job=\"unrdf\"}",
            "legendFormat": "",
            "refId": "A",
            "instant": true
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {},
              "indexByName": {
                "alertname": 0,
                "severity": 1,
                "alertstate": 2
              }
            }
          }
        ]
      },
      {
        "id": 10,
        "title": "CPU Usage",
        "type": "graph",
        "gridPos": { "x": 0, "y": 16, "w": 12, "h": 6 },
        "targets": [
          {
            "expr": "rate(unrdf_cpu_user_microseconds[5m]) / 1000000",
            "legendFormat": "User CPU",
            "refId": "A"
          },
          {
            "expr": "rate(unrdf_cpu_system_microseconds[5m]) / 1000000",
            "legendFormat": "System CPU",
            "refId": "B"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percentunit"
          }
        }
      },
      {
        "id": 11,
        "title": "Dependency Health",
        "type": "table",
        "gridPos": { "x": 12, "y": 16, "w": 12, "h": 6 },
        "targets": [
          {
            "expr": "unrdf_dependency_status",
            "legendFormat": "{{dependency}}",
            "refId": "A",
            "instant": true
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {},
              "indexByName": {
                "dependency": 0,
                "status": 1,
                "latency": 2
              }
            }
          }
        ],
        "fieldConfig": {
          "overrides": [
            {
              "matcher": { "id": "byName", "options": "status" },
              "properties": [
                {
                  "id": "mappings",
                  "value": [
                    { "value": "connected", "text": "✓ Connected", "color": "green" },
                    { "value": "disconnected", "text": "✗ Disconnected", "color": "red" },
                    { "value": "degraded", "text": "⚠ Degraded", "color": "yellow" }
                  ]
                }
              ]
            }
          ]
        }
      }
    ],
    "templating": {
      "list": [
        {
          "name": "datasource",
          "type": "datasource",
          "query": "prometheus",
          "current": {
            "text": "Prometheus",
            "value": "prometheus"
          }
        },
        {
          "name": "environment",
          "type": "query",
          "query": "label_values(unrdf_service_info, environment)",
          "current": {
            "text": "production",
            "value": "production"
          }
        }
      ]
    },
    "annotations": {
      "list": [
        {
          "name": "Deployments",
          "datasource": "prometheus",
          "expr": "changes(unrdf_service_info{environment=\"$environment\"}[5m]) > 0",
          "iconColor": "blue",
          "tagKeys": "version"
        },
        {
          "name": "Alerts",
          "datasource": "prometheus",
          "expr": "ALERTS{job=\"unrdf\", severity=\"critical\"}",
          "iconColor": "red"
        }
      ]
    }
  }
}
