@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix nfo: <http://www.semanticdesktop.org/ontologies/2007/03/22/nfo#> .
@prefix nie: <http://www.semanticdesktop.org/ontologies/2007/01/19/nie#> .
@prefix unfs: <http://example.org/unrdf/filesystem#> .

# UNRDF Filesystem Ontology
# Extends NFO with project-specific filesystem concepts

# Classes: Filesystem Resources

unfs:ProjectRoot
  a rdfs:Class ;
  rdfs:label "Project Root" ;
  rdfs:comment "The root directory of a project" ;
  rdfs:subClassOf nfo:Folder .

unfs:SourceFolder
  a rdfs:Class ;
  rdfs:label "Source Folder" ;
  rdfs:comment "Contains source code (src, lib, app, etc.)" ;
  rdfs:subClassOf nfo:Folder .

unfs:BuildFolder
  a rdfs:Class ;
  rdfs:label "Build Folder" ;
  rdfs:comment "Contains build output (dist, build, .next, .turbo, etc.)" ;
  rdfs:subClassOf nfo:Folder .

unfs:ConfigFolder
  a rdfs:Class ;
  rdfs:label "Configuration Folder" ;
  rdfs:comment "Contains configuration files" ;
  rdfs:subClassOf nfo:Folder .

unfs:TestFolder
  a rdfs:Class ;
  rdfs:label "Test Folder" ;
  rdfs:comment "Contains test files (__tests__, test, tests, spec, etc.)" ;
  rdfs:subClassOf nfo:Folder .

unfs:IgnoredResource
  a rdfs:Class ;
  rdfs:label "Ignored Resource" ;
  rdfs:comment "Resource matched by ignore patterns (node_modules, .git, etc.)" ;
  rdfs:subClassOf nfo:FileDataObject .

# Properties: Filesystem Attributes

unfs:relativePath
  a rdf:Property ;
  rdfs:label "Relative Path" ;
  rdfs:comment "Path relative to project root" ;
  rdfs:domain nfo:FileDataObject ;
  rdfs:range xsd:string .

unfs:depth
  a rdf:Property ;
  rdfs:label "Directory Depth" ;
  rdfs:comment "Nesting level from project root" ;
  rdfs:domain nfo:FileDataObject ;
  rdfs:range xsd:integer .

unfs:isHidden
  a rdf:Property ;
  rdfs:label "Is Hidden" ;
  rdfs:comment "True if path starts with dot (.git, .env, etc.)" ;
  rdfs:domain nfo:FileDataObject ;
  rdfs:range xsd:boolean .

unfs:byteSize
  a rdf:Property ;
  rdfs:label "Byte Size" ;
  rdfs:comment "File size in bytes" ;
  rdfs:domain nfo:FileDataObject ;
  rdfs:range xsd:integer .

unfs:lastModified
  a rdf:Property ;
  rdfs:label "Last Modified" ;
  rdfs:comment "ISO 8601 timestamp of last modification" ;
  rdfs:domain nfo:FileDataObject ;
  rdfs:range xsd:dateTime .

unfs:containedIn
  a rdf:Property ;
  rdfs:label "Contained In" ;
  rdfs:comment "Inverse of containment (from file to its parent folder)" ;
  rdfs:domain nfo:FileDataObject ;
  rdfs:range nfo:Folder .

# File Extension Classification

unfs:extension
  a rdf:Property ;
  rdfs:label "File Extension" ;
  rdfs:comment "File extension without dot" ;
  rdfs:domain nfo:FileDataObject ;
  rdfs:range xsd:string .

unfs:mimeType
  a rdf:Property ;
  rdfs:label "MIME Type" ;
  rdfs:comment "MIME type of file" ;
  rdfs:domain nfo:FileDataObject ;
  rdfs:range xsd:string .
