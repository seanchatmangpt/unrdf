# knowd Bazel configuration

# Go configuration
build --incompatible_enable_cc_toolchain_resolution

# Build optimization
build --compilation_mode=opt
build --strip=always

# Output configuration
build --color=yes
build --curses=no
build --verbose_failures=true

# Cache configuration
build --disk_cache=/tmp/bazel-cache
build --remote_cache=

# Build with go build instead of external linking
build --@rules_go//go/config:pure
