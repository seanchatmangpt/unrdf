# PAPER DOMAIN PROPERTIES
# =============================================================================

# -----------------------------------------------------------------------------
# Core Academic Work Properties
# -----------------------------------------------------------------------------

paper:hasTitle a rdf:Property, owl:DatatypeProperty ;
    rdfs:domain paper:AcademicWork ;
    rdfs:range xsd:string ;
    rdfs:label "has title"@en ;
    rdfs:comment "The title of the academic work."@en ;
    rdfs:isDefinedBy <http://example.org/ontology/papers-thesis> .

paper:hasAbstract a rdf:Property, owl:DatatypeProperty ;
    rdfs:domain paper:AcademicWork ;
    rdfs:range xsd:string ;
    rdfs:label "has abstract"@en ;
    rdfs:comment "The abstract summarizing the academic work."@en ;
    rdfs:isDefinedBy <http://example.org/ontology/papers-thesis> .

paper:hasAuthor a rdf:Property, owl:ObjectProperty ;
    rdfs:domain paper:AcademicWork ;
    rdfs:range paper:Author ;
    rdfs:label "has author"@en ;
    rdfs:comment "Links an academic work to one of its authors."@en ;
    owl:inverseOf paper:authorOf ;
    rdfs:isDefinedBy <http://example.org/ontology/papers-thesis> .

paper:authorOf a rdf:Property, owl:ObjectProperty ;
    rdfs:domain paper:Author ;
    rdfs:range paper:AcademicWork ;
    rdfs:label "author of"@en ;
    rdfs:comment "Links an author to their academic works."@en ;
    owl:inverseOf paper:hasAuthor ;
    rdfs:isDefinedBy <http://example.org/ontology/papers-thesis> .

paper:hasSection a rdf:Property, owl:ObjectProperty ;
    rdfs:domain paper:AcademicWork ;
    rdfs:range paper:Section ;
    rdfs:label "has section"@en ;
    rdfs:comment "Links an academic work to its sections."@en ;
    rdfs:isDefinedBy <http://example.org/ontology/papers-thesis> .

paper:paperFamily a rdf:Property, owl:DatatypeProperty ;
    rdfs:domain paper:Paper ;
    rdfs:range xsd:string ;
    rdfs:label "paper family"@en ;
    rdfs:comment "The structural family of the paper: imrad, argument, contribution, dsr, monograph, or narrative."@en ;
    skos:note "Valid values: imrad, argument, contribution, dsr, monograph, narrative"@en ;
    rdfs:isDefinedBy <http://example.org/ontology/papers-thesis> .

paper:publicationYear a rdf:Property, owl:DatatypeProperty ;
    rdfs:domain paper:AcademicWork ;
    rdfs:range xsd:gYear ;
    rdfs:label "publication year"@en ;
    rdfs:comment "The year the work was published."@en ;
    rdfs:isDefinedBy <http://example.org/ontology/papers-thesis> .

paper:hasKeyword a rdf:Property, owl:DatatypeProperty ;
    rdfs:domain paper:AcademicWork ;
    rdfs:range xsd:string ;
    rdfs:label "has keyword"@en ;
    rdfs:comment "A keyword describing the content of the work."@en ;
    rdfs:isDefinedBy <http://example.org/ontology/papers-thesis> .

paper:hasDOI a rdf:Property, owl:DatatypeProperty ;
    rdfs:domain paper:AcademicWork ;
    rdfs:range xsd:string ;
    rdfs:label "has DOI"@en ;
    rdfs:comment "The Digital Object Identifier (DOI) of the work."@en ;
    rdfs:isDefinedBy <http://example.org/ontology/papers-thesis> .

paper:hasPublisher a rdf:Property, owl:ObjectProperty ;
    rdfs:domain paper:Paper ;
    rdfs:range paper:Publisher ;
    rdfs:label "has publisher"@en ;
    rdfs:comment "Links a paper to its publication venue."@en ;
    rdfs:isDefinedBy <http://example.org/ontology/papers-thesis> .

paper:citationCount a rdf:Property, owl:DatatypeProperty ;
    rdfs:domain paper:AcademicWork ;
    rdfs:range xsd:nonNegativeInteger ;
    rdfs:label "citation count"@en ;
    rdfs:comment "The number of citations this work has received."@en ;
    rdfs:isDefinedBy <http://example.org/ontology/papers-thesis> .

paper:cites a rdf:Property, owl:ObjectProperty ;
    rdfs:domain paper:AcademicWork ;
    rdfs:range paper:AcademicWork ;
    rdfs:label "cites"@en ;
    rdfs:comment "Links a work to another work it cites."@en ;
    rdfs:isDefinedBy <http://example.org/ontology/papers-thesis> .

paper:isCitedBy a rdf:Property, owl:ObjectProperty ;
    rdfs:domain paper:AcademicWork ;
    rdfs:range paper:AcademicWork ;
    rdfs:label "is cited by"@en ;
    rdfs:comment "Links a work to another work that cites it."@en ;
    owl:inverseOf paper:cites ;
    rdfs:isDefinedBy <http://example.org/ontology/papers-thesis> .

# -----------------------------------------------------------------------------
# Section Properties
# -----------------------------------------------------------------------------

paper:sectionHeading a rdf:Property, owl:DatatypeProperty ;
    rdfs:domain paper:Section ;
    rdfs:range xsd:string ;
    rdfs:label "section heading"@en ;
    rdfs:comment "The heading or title of the section."@en ;
    rdfs:isDefinedBy <http://example.org/ontology/papers-thesis> .

paper:sectionContent a rdf:Property, owl:DatatypeProperty ;
    rdfs:domain paper:Section ;
    rdfs:range xsd:string ;
    rdfs:label "section content"@en ;
    rdfs:comment "The textual content of the section."@en ;
    rdfs:isDefinedBy <http://example.org/ontology/papers-thesis> .

paper:sectionOrder a rdf:Property, owl:DatatypeProperty ;
    rdfs:domain paper:Section ;
    rdfs:range xsd:integer ;
    rdfs:label "section order"@en ;
    rdfs:comment "The order of the section within its parent."@en ;
    rdfs:isDefinedBy <http://example.org/ontology/papers-thesis> .

paper:sectionLevel a rdf:Property, owl:DatatypeProperty ;
    rdfs:domain paper:Section ;
    rdfs:range xsd:integer ;
    rdfs:label "section level"@en ;
    rdfs:comment "The nesting level: 1=chapter, 2=section, 3=subsection."@en ;
    rdfs:isDefinedBy <http://example.org/ontology/papers-thesis> .

paper:hasParentSection a rdf:Property, owl:ObjectProperty ;
    rdfs:domain paper:Section ;
    rdfs:range paper:Section ;
    rdfs:label "has parent section"@en ;
    rdfs:comment "Links a subsection to its parent section."@en ;
    rdfs:isDefinedBy <http://example.org/ontology/papers-thesis> .

paper:hasSubsection a rdf:Property, owl:ObjectProperty ;
    rdfs:domain paper:Section ;
    rdfs:range paper:Section ;
    rdfs:label "has subsection"@en ;
    rdfs:comment "Links a section to its subsections."@en ;
    owl:inverseOf paper:hasParentSection ;
    rdfs:isDefinedBy <http://example.org/ontology/papers-thesis> .

paper:wordCount a rdf:Property, owl:DatatypeProperty ;
    rdfs:domain paper:Section ;
    rdfs:range xsd:nonNegativeInteger ;
    rdfs:label "word count"@en ;
    rdfs:comment "The number of words in the section."@en ;
    rdfs:isDefinedBy <http://example.org/ontology/papers-thesis> .

