# DUBLIN CORE MAPPINGS
# =============================================================================

# dc:creator - Use for primary creator (maps to paper:hasAuthor)
# dc:date - Use for publication date
# dc:issued - Use for formal publication date
# dc:title - Equivalent to paper:hasTitle
# dc:subject - Use for keywords (maps to paper:hasKeyword)
# dc:description - Use for abstract (maps to paper:hasAbstract)
# dc:publisher - Use for publication venue

# =============================================================================
# SHACL CONSTRAINTS (Embedded)
# =============================================================================

# Paper must have at least one author
paper:PaperShape a sh:NodeShape ;
    sh:targetClass paper:Paper ;
    sh:property [
        sh:path paper:hasAuthor ;
        sh:minCount 1 ;
        sh:message "A paper must have at least one author."@en ;
    ] ;
    sh:property [
        sh:path paper:hasTitle ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
        sh:minLength 1 ;
        sh:datatype xsd:string ;
        sh:message "A paper must have exactly one non-empty title."@en ;
    ] .

# IMRAD paper must have required sections
paper:IMRADPaperShape a sh:NodeShape ;
    sh:targetClass paper:IMRADPaper ;
    sh:property [
        sh:path paper:hasSection ;
        sh:minCount 4 ;
        sh:message "An IMRAD paper must have at least Introduction, Methods, Results, and Discussion sections."@en ;
    ] .

# Thesis must have defense date after creation date
thesis:ThesisShape a sh:NodeShape ;
    sh:targetClass thesis:Thesis ;
    sh:property [
        sh:path thesis:hasAdvisor ;
        sh:minCount 1 ;
        sh:message "A thesis must have at least one advisor."@en ;
    ] ;
    sh:property [
        sh:path thesis:institution ;
        sh:minCount 1 ;
        sh:datatype xsd:string ;
        sh:message "A thesis must specify an institution."@en ;
    ] .

# Committee member must have a role
thesis:CommitteeMemberShape a sh:NodeShape ;
    sh:targetClass thesis:CommitteeMember ;
    sh:property [
        sh:path thesis:committeeRole ;
        sh:minCount 1 ;
        sh:datatype xsd:string ;
        sh:message "A committee member must have a specified role."@en ;
    ] ;
    sh:property [
        sh:path foaf:name ;
        sh:minCount 1 ;
        sh:message "A committee member must have a name."@en ;
    ] .

# Defense event constraints
thesis:DefenseEventShape a sh:NodeShape ;
    sh:targetClass thesis:DefenseEvent ;
    sh:property [
        sh:path thesis:defenseDate ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
        sh:datatype xsd:date ;
        sh:message "A defense event must have exactly one defense date."@en ;
    ] ;
    sh:property [
        sh:path thesis:hasCommitteeMember ;
        sh:minCount 3 ;
        sh:message "A defense must have at least 3 committee members."@en ;
    ] .

# =============================================================================
# OWL 2.0 RESTRICTIONS
# =============================================================================

# Academic work must have at least one title
paper:AcademicWork rdfs:subClassOf [
    a owl:Restriction ;
    owl:onProperty paper:hasTitle ;
    owl:minCardinality 1
] .

# Paper must have at least one author
paper:Paper rdfs:subClassOf [
    a owl:Restriction ;
    owl:onProperty paper:hasAuthor ;
    owl:minCardinality 1
] .

# Section must belong to exactly one parent work (functional property constraint)
paper:Section rdfs:subClassOf [
    a owl:Restriction ;
    owl:onProperty paper:sectionOrder ;
    owl:maxCardinality 1
] .

# Thesis must have exactly one schedule
thesis:Thesis rdfs:subClassOf [
    a owl:Restriction ;
    owl:onProperty thesis:hasSchedule ;
    owl:maxCardinality 1
] .

# PhD thesis must be for PhD degree
thesis:PhDThesis rdfs:subClassOf [
    a owl:Restriction ;
    owl:onProperty thesis:degree ;
    owl:hasValue "PhD"
] .

# Masters thesis must be for Masters degree
thesis:MastersThesis rdfs:subClassOf [
    a owl:Restriction ;
    owl:onProperty thesis:degree ;
    owl:hasValue "Masters"
] .

# =============================================================================
# DISJOINT CLASSES
# =============================================================================

# Paper types are disjoint
paper:IMRADPaper owl:disjointWith paper:ArgumentPaper, paper:ContributionPaper, paper:DSRPaper, paper:NarrativePaper .
paper:ArgumentPaper owl:disjointWith paper:ContributionPaper, paper:DSRPaper, paper:NarrativePaper .
paper:ContributionPaper owl:disjointWith paper:DSRPaper, paper:NarrativePaper .
paper:DSRPaper owl:disjointWith paper:NarrativePaper .

# Thesis types are disjoint
thesis:PhDThesis owl:disjointWith thesis:MastersThesis, thesis:BachelorsThesis .
thesis:MastersThesis owl:disjointWith thesis:BachelorsThesis .

# =============================================================================
# NAMED QUERY CLASS (for machine-executable documentation)
# =============================================================================

paper:NamedQuery a rdfs:Class, owl:Class ;
    rdfs:label "Named Query"@en ;
    rdfs:comment "A reusable SPARQL query stored in the ontology."@en ;
    rdfs:isDefinedBy <http://example.org/ontology/papers-thesis> .

paper:queryName a rdf:Property, owl:DatatypeProperty ;
    rdfs:domain paper:NamedQuery ;
    rdfs:range xsd:string ;
    rdfs:label "query name"@en ;
    rdfs:isDefinedBy <http://example.org/ontology/papers-thesis> .

paper:queryBody a rdf:Property, owl:DatatypeProperty ;
    rdfs:domain paper:NamedQuery ;
    rdfs:range xsd:string ;
    rdfs:label "query body"@en ;
    rdfs:isDefinedBy <http://example.org/ontology/papers-thesis> .

paper:queryDescription a rdf:Property, owl:DatatypeProperty ;
    rdfs:domain paper:NamedQuery ;
    rdfs:range xsd:string ;
    rdfs:label "query description"@en ;
    rdfs:isDefinedBy <http://example.org/ontology/papers-thesis> .
