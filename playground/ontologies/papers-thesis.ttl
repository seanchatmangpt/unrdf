# =============================================================================
# Ontology Metadata
# =============================================================================

<http://example.org/ontology/papers-thesis> a owl:Ontology ;
    dc:title "Papers and Thesis Ontology"@en ;
    dc:description "A comprehensive RDF/OWL ontology for academic papers and thesis documents, supporting IMRAD, DSR, Argument, Contribution, Monograph, and Narrative structures."@en ;
    dc:creator "UNRDF Team" ;
    dc:created "2025-01-01"^^xsd:date ;
    dc:modified "2025-11-21"^^xsd:date ;
    dc:version "2.0.0" ;
    owl:versionInfo "2.0.0" ;
    dc:license <http://creativecommons.org/licenses/by/4.0/> ;
    rdfs:seeAlso <http://example.org/ontology/papers-thesis/documentation> ;
    owl:imports <http://xmlns.com/foaf/0.1/> .

# =============================================================================
# PAPER DOMAIN CLASSES
# =============================================================================

# -----------------------------------------------------------------------------
# Base Academic Work Class
# -----------------------------------------------------------------------------

paper:AcademicWork a rdfs:Class, owl:Class ;
    rdfs:label "Academic Work"@en ;
    rdfs:comment "Base class for all academic documents including papers, theses, and dissertations. All academic works have titles, authors, and may contain sections."@en ;
    skos:definition "An academic work is any scholarly document produced for research, educational, or professional purposes within an academic context."@en ;
    skos:example "Research paper, PhD dissertation, conference presentation, technical report"@en ;
    rdfs:isDefinedBy <http://example.org/ontology/papers-thesis> .

# -----------------------------------------------------------------------------
# Paper Class and Subclasses
# -----------------------------------------------------------------------------

paper:Paper a rdfs:Class, owl:Class ;
    rdfs:subClassOf paper:AcademicWork ;
    rdfs:label "Research Paper"@en ;
    rdfs:comment "A research paper presenting findings, arguments, or contributions to a specific field of study."@en ;
    skos:definition "A paper is a formal written document that presents original research, analysis, or scholarly argument."@en ;
    skos:example "Conference paper, journal article, workshop paper, technical report"@en ;
    rdfs:isDefinedBy <http://example.org/ontology/papers-thesis> .

paper:IMRADPaper a rdfs:Class, owl:Class ;
    rdfs:subClassOf paper:Paper ;
    rdfs:label "IMRAD Paper"@en ;
    rdfs:comment "Paper following the IMRAD structure: Introduction, Methods, Results, and Discussion. This is the standard format for empirical research papers in natural and social sciences."@en ;
    skos:definition "IMRAD (Introduction, Methods, Results, and Discussion) is a common organizational structure for scientific papers that report original research."@en ;
    skos:note "Required sections: Introduction, Methods, Results, Discussion. Optional: Conclusion"@en ;
    rdfs:isDefinedBy <http://example.org/ontology/papers-thesis> .

paper:ArgumentPaper a rdfs:Class, owl:Class ;
    rdfs:subClassOf paper:Paper ;
    rdfs:label "Argument Paper"@en ;
    rdfs:comment "Paper structured around a central thesis and supporting arguments. Common in philosophy, humanities, and position papers."@en ;
    skos:definition "An argument paper presents a thesis statement and develops supporting arguments, addresses counter-arguments, and draws conclusions."@en ;
    skos:note "Required sections: Thesis Statement, Premises, Arguments, Counter-arguments, Conclusion"@en ;
    rdfs:isDefinedBy <http://example.org/ontology/papers-thesis> .

paper:ContributionPaper a rdfs:Class, owl:Class ;
    rdfs:subClassOf paper:Paper ;
    rdfs:label "Contribution Paper"@en ;
    rdfs:comment "Paper focused on presenting specific research contributions. Common in computer science and engineering venues."@en ;
    skos:definition "A contribution paper clearly identifies and presents novel contributions to a field, typically including motivation, background, the contribution itself, and validation."@en ;
    skos:note "Required sections: Motivation, Background, Contribution, Validation, Related Work, Conclusion"@en ;
    rdfs:isDefinedBy <http://example.org/ontology/papers-thesis> .

paper:DSRPaper a rdfs:Class, owl:Class ;
    rdfs:subClassOf paper:Paper ;
    rdfs:label "Design Science Research Paper"@en ;
    rdfs:comment "Paper following the Design Science Research methodology, focused on creating and evaluating artifacts."@en ;
    skos:definition "A DSR paper follows a systematic methodology for designing, developing, and evaluating artifacts that address practical problems."@en ;
    skos:note "Required sections: Problem Identification, Objectives, Design & Development, Demonstration, Evaluation, Communication"@en ;
    rdfs:seeAlso <https://doi.org/10.2307/25148625> ;
    rdfs:isDefinedBy <http://example.org/ontology/papers-thesis> .

paper:MonographPaper a rdfs:Class, owl:Class ;
    rdfs:subClassOf paper:Paper ;
    rdfs:label "Monograph Paper"@en ;
    rdfs:comment "A scholarly paper or book on a single specialized topic, presenting comprehensive treatment of the subject."@en ;
    skos:definition "A monograph is a detailed written study of a single specialized subject or aspect of a subject, often by a single author."@en ;
    rdfs:isDefinedBy <http://example.org/ontology/papers-thesis> .

paper:NarrativePaper a rdfs:Class, owl:Class ;
    rdfs:subClassOf paper:Paper ;
    rdfs:label "Narrative Paper"@en ;
    rdfs:comment "Paper employing narrative structure to present research, common in qualitative research, case studies, and ethnographic studies."@en ;
    skos:definition "A narrative paper tells a story to convey research findings, often used in qualitative research and humanities."@en ;
    skos:note "Typical sections: Prologue, Background, Story/Case, Analysis, Epilogue"@en ;
    rdfs:isDefinedBy <http://example.org/ontology/papers-thesis> .

# -----------------------------------------------------------------------------
# Section and Structure Classes
# -----------------------------------------------------------------------------

paper:Section a rdfs:Class, owl:Class ;
    rdfs:label "Document Section"@en ;
    rdfs:comment "A section or chapter within an academic work. Sections can be nested to form hierarchical document structures."@en ;
    skos:definition "A discrete part of an academic document that covers a specific topic or serves a specific purpose in the document structure."@en ;
    rdfs:isDefinedBy <http://example.org/ontology/papers-thesis> .

paper:Chapter a rdfs:Class, owl:Class ;
    rdfs:subClassOf paper:Section ;
    rdfs:label "Chapter"@en ;
    rdfs:comment "A major division of a longer academic work such as a thesis or monograph."@en ;
    rdfs:isDefinedBy <http://example.org/ontology/papers-thesis> .

paper:Subsection a rdfs:Class, owl:Class ;
    rdfs:subClassOf paper:Section ;
    rdfs:label "Subsection"@en ;
    rdfs:comment "A subdivision within a section, used for organizing detailed content."@en ;
    rdfs:isDefinedBy <http://example.org/ontology/papers-thesis> .

# -----------------------------------------------------------------------------
# Author and Publisher Classes
# -----------------------------------------------------------------------------

paper:Author a rdfs:Class, owl:Class ;
    rdfs:subClassOf foaf:Person ;
    rdfs:label "Author"@en ;
    rdfs:comment "An author of an academic work. Authors have names, affiliations, and may have identifiers like ORCID."@en ;
    skos:definition "A person who has contributed to the intellectual content of an academic work and takes responsibility for its content."@en ;
    rdfs:isDefinedBy <http://example.org/ontology/papers-thesis> .

paper:Publisher a rdfs:Class, owl:Class ;
    rdfs:subClassOf foaf:Organization ;
    rdfs:label "Publisher"@en ;
    rdfs:comment "A publication venue or organization that publishes academic works."@en ;
    skos:definition "An organization responsible for making academic works available to the public, including journals, conferences, and university presses."@en ;
    skos:example "IEEE, ACM, Springer, MIT Press"@en ;
    rdfs:isDefinedBy <http://example.org/ontology/papers-thesis> .

paper:Conference a rdfs:Class, owl:Class ;
    rdfs:subClassOf paper:Publisher ;
    rdfs:label "Conference"@en ;
    rdfs:comment "An academic conference that publishes proceedings."@en ;
    rdfs:isDefinedBy <http://example.org/ontology/papers-thesis> .

paper:Journal a rdfs:Class, owl:Class ;
    rdfs:subClassOf paper:Publisher ;
    rdfs:label "Journal"@en ;
    rdfs:comment "An academic journal that publishes peer-reviewed articles."@en ;
    rdfs:isDefinedBy <http://example.org/ontology/papers-thesis> .

# =============================================================================
# THESIS DOMAIN CLASSES
# =============================================================================

thesis:Thesis a rdfs:Class, owl:Class ;
    rdfs:subClassOf paper:AcademicWork ;
    rdfs:label "Thesis"@en ;
    rdfs:comment "A formal academic thesis document submitted for a degree."@en ;
    skos:definition "A thesis is a substantial academic document presenting original research, submitted as part of the requirements for an academic degree."@en ;
    rdfs:isDefinedBy <http://example.org/ontology/papers-thesis> .

thesis:MastersThesis a rdfs:Class, owl:Class ;
    rdfs:subClassOf thesis:Thesis ;
    rdfs:label "Master's Thesis"@en ;
    rdfs:comment "A thesis submitted for a Master's degree (MA, MS, MBA, etc.)."@en ;
    skos:definition "A Master's thesis demonstrates competence in a field and ability to conduct independent research at the graduate level."@en ;
    rdfs:isDefinedBy <http://example.org/ontology/papers-thesis> .

thesis:PhDThesis a rdfs:Class, owl:Class ;
    rdfs:subClassOf thesis:Thesis ;
    rdfs:label "PhD Thesis"@en ;
    rdfs:comment "A doctoral dissertation submitted for a PhD or equivalent doctoral degree."@en ;
    skos:definition "A PhD thesis presents original research that makes a significant contribution to knowledge in a field."@en ;
    rdfs:isDefinedBy <http://example.org/ontology/papers-thesis> .

thesis:BachelorsThesis a rdfs:Class, owl:Class ;
    rdfs:subClassOf thesis:Thesis ;
    rdfs:label "Bachelor's Thesis"@en ;
    rdfs:comment "An undergraduate thesis submitted for a Bachelor's degree."@en ;
    rdfs:isDefinedBy <http://example.org/ontology/papers-thesis> .

thesis:DefenseEvent a rdfs:Class, owl:Class ;
    rdfs:label "Defense Event"@en ;
    rdfs:comment "A thesis defense event where the candidate presents and defends their work before a committee."@en ;
    skos:definition "A formal academic event where a thesis candidate presents their research and responds to questions from committee members."@en ;
    rdfs:isDefinedBy <http://example.org/ontology/papers-thesis> .

thesis:CommitteeMember a rdfs:Class, owl:Class ;
    rdfs:subClassOf foaf:Person ;
    rdfs:label "Committee Member"@en ;
    rdfs:comment "A member of a thesis examination committee."@en ;
    skos:definition "An academic who serves on a thesis committee, responsible for evaluating the thesis and participating in the defense."@en ;
    rdfs:isDefinedBy <http://example.org/ontology/papers-thesis> .

thesis:Schedule a rdfs:Class, owl:Class ;
    rdfs:label "Schedule"@en ;
    rdfs:comment "A timeline containing milestones for thesis completion."@en ;
    skos:definition "A structured plan outlining key dates and milestones in the thesis development process."@en ;
    rdfs:isDefinedBy <http://example.org/ontology/papers-thesis> .

thesis:Milestone a rdfs:Class, owl:Class ;
    rdfs:label "Milestone"@en ;
    rdfs:comment "A specific milestone in the thesis schedule."@en ;
    skos:definition "A significant point or event in the thesis timeline, such as proposal defense, draft completion, or final defense."@en ;
    skos:example "Proposal defense, Literature review complete, Data collection complete, Draft submission, Final defense"@en ;
    rdfs:isDefinedBy <http://example.org/ontology/papers-thesis> .

thesis:Advisor a rdfs:Class, owl:Class ;
    rdfs:subClassOf thesis:CommitteeMember ;
    rdfs:label "Thesis Advisor"@en ;
    rdfs:comment "The primary supervisor or advisor for a thesis."@en ;
    rdfs:isDefinedBy <http://example.org/ontology/papers-thesis> .

thesis:ExternalExaminer a rdfs:Class, owl:Class ;
    rdfs:subClassOf thesis:CommitteeMember ;
    rdfs:label "External Examiner"@en ;
    rdfs:comment "An examiner from outside the candidate's institution."@en ;
    rdfs:isDefinedBy <http://example.org/ontology/papers-thesis> .

