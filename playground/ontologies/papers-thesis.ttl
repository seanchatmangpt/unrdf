    rdfs:range xsd:string ;
    rdfs:label "has ORCID"@en ;
    rdfs:comment "The ORCID identifier of the author."@en ;
    rdfs:isDefinedBy <http://example.org/ontology/papers-thesis> .

paper:authorOrder a rdf:Property, owl:DatatypeProperty ;
