{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Papers-Thesis CLI Command Registry",
  "version": "1.0.0",
  "description": "Machine-executable command registry for the Papers-Thesis CLI",
  "commands": {
    "papers": {
      "description": "Manage research papers",
      "subcommands": {
        "generate": {
          "description": "Generate paper from template",
          "args": {
            "family": {
              "type": "positional",
              "required": false,
              "default": "imrad",
              "enum": ["imrad", "dsr", "argument", "contribution"],
              "description": "Paper family/structure"
            },
            "title": {
              "type": "string",
              "alias": "t",
              "required": true,
              "description": "Paper title"
            },
            "author": {
              "type": "string",
              "alias": "a",
              "required": true,
              "description": "Author name"
            },
            "affiliation": {
              "type": "string",
              "required": false,
              "description": "Author affiliation"
            },
            "abstract": {
              "type": "string",
              "required": false,
              "description": "Paper abstract"
            },
            "sections": {
              "type": "string",
              "required": false,
              "description": "Custom sections as JSON array"
            }
          },
          "examples": [
            "playground papers generate --title \"My Paper\" --author \"Alice\"",
            "playground papers generate dsr -t \"DSR Paper\" -a \"Bob\" --affiliation \"MIT\"",
            "playground papers generate argument --title \"Argument\" --author \"Carol\" --abstract \"This paper argues...\""
          ]
        },
        "list": {
          "description": "List available paper families",
          "args": {
            "verbose": {
              "type": "boolean",
              "alias": "v",
              "default": false,
              "description": "Show detailed information"
            }
          },
          "examples": [
            "playground papers list",
            "playground papers list --verbose"
          ]
        },
        "validate": {
          "description": "Validate paper structure",
          "args": {
            "path": {
              "type": "positional",
              "required": true,
              "description": "Path to paper file"
            },
            "strict": {
              "type": "boolean",
              "default": false,
              "description": "Enable strict validation"
            }
          },
          "examples": [
            "playground papers validate ./output/my-paper.tex",
            "playground papers validate ./paper.tex --strict"
          ]
        }
      }
    },
    "thesis": {
      "description": "Manage thesis documents",
      "subcommands": {
        "generate": {
          "description": "Generate thesis structure",
          "args": {
            "type": {
              "type": "positional",
              "required": false,
              "default": "monograph",
              "enum": ["monograph", "narrative", "contribution"],
              "description": "Thesis type"
            },
            "title": {
              "type": "string",
              "alias": "t",
              "required": true,
              "description": "Thesis title"
            },
            "author": {
              "type": "string",
              "alias": "a",
              "required": true,
              "description": "Author name"
            },
            "institution": {
              "type": "string",
              "required": false,
              "description": "Institution name"
            },
            "department": {
              "type": "string",
              "required": false,
              "description": "Department name"
            },
            "supervisor": {
              "type": "string",
              "required": false,
              "description": "Supervisor name"
            }
          },
          "examples": [
            "playground thesis generate --title \"My Thesis\" --author \"Alice\"",
            "playground thesis generate narrative -t \"PhD Thesis\" -a \"Bob\" --supervisor \"Dr. Smith\""
          ]
        },
        "list": {
          "description": "List thesis types",
          "args": {
            "verbose": {
              "type": "boolean",
              "alias": "v",
              "default": false,
              "description": "Show detailed information"
            }
          },
          "examples": [
            "playground thesis list",
            "playground thesis list -v"
          ]
        },
        "schedule": {
          "description": "Manage thesis schedule",
          "subcommands": {
            "list": {
              "description": "Show current schedule",
              "args": {},
              "examples": [
                "playground thesis schedule list"
              ]
            },
            "set": {
              "description": "Configure schedule",
              "args": {
                "defense": {
                  "type": "string",
                  "description": "Defense date (YYYY-MM-DD)"
                },
                "milestone": {
                  "type": "string",
                  "description": "Add milestone (JSON: {\"name\": \"...\", \"date\": \"...\"})"
                }
              },
              "examples": [
                "playground thesis schedule set --defense 2025-06-15",
                "playground thesis schedule set --milestone '{\"name\": \"Draft\", \"date\": \"2025-03-01\"}'"
              ]
            }
          }
        }
      }
    },
    "config": {
      "description": "Manage CLI configuration",
      "subcommands": {
        "set": {
          "description": "Set configuration value",
          "args": {
            "key": {
              "type": "positional",
              "required": true,
              "description": "Configuration key"
            },
            "value": {
              "type": "positional",
              "required": true,
              "description": "Configuration value"
            }
          },
          "examples": [
            "playground config set author.name \"Alice\"",
            "playground config set output.format json"
          ]
        },
        "get": {
          "description": "Get configuration value",
          "args": {
            "key": {
              "type": "positional",
              "required": true,
              "description": "Configuration key"
            }
          },
          "examples": [
            "playground config get author.name",
            "playground config get output.format"
          ]
        },
        "list": {
          "description": "List all configuration",
          "args": {},
          "examples": [
            "playground config list"
          ]
        },
        "reset": {
          "description": "Reset to defaults",
          "args": {
            "confirm": {
              "type": "boolean",
              "required": false,
              "description": "Confirm reset without prompt"
            }
          },
          "examples": [
            "playground config reset",
            "playground config reset --confirm"
          ]
        }
      }
    },
    "meta": {
      "description": "Meta operations and introspection",
      "subcommands": {
        "introspect": {
          "description": "Machine-grade introspection",
          "args": {
            "format": {
              "type": "string",
              "alias": "f",
              "default": "json",
              "enum": ["json", "yaml"],
              "description": "Output format"
            }
          },
          "examples": [
            "playground meta introspect",
            "playground meta introspect --format yaml"
          ]
        },
        "ontology": {
          "description": "Ontology operations",
          "subcommands": {
            "list": {
              "description": "List RDF classes",
              "args": {
                "verbose": {
                  "type": "boolean",
                  "alias": "v",
                  "default": false,
                  "description": "Show detailed information"
                }
              },
              "examples": [
                "playground meta ontology list",
                "playground meta ontology list -v"
              ]
            }
          }
        },
        "sparql": {
          "description": "Execute SPARQL query",
          "args": {
            "query": {
              "type": "positional",
              "required": false,
              "description": "SPARQL query string"
            },
            "file": {
              "type": "string",
              "alias": "f",
              "required": false,
              "description": "Path to SPARQL query file"
            },
            "format": {
              "type": "string",
              "default": "table",
              "enum": ["table", "json", "csv"],
              "description": "Output format"
            }
          },
          "examples": [
            "playground meta sparql \"SELECT ?s ?p ?o WHERE { ?s ?p ?o } LIMIT 10\"",
            "playground meta sparql --file ./queries/find-papers.sparql",
            "playground meta sparql \"SELECT * WHERE { ?s a pt:Paper }\" --format json"
          ]
        },
        "completions": {
          "description": "Generate shell completions",
          "args": {
            "shell": {
              "type": "positional",
              "required": true,
              "enum": ["bash", "zsh", "fish", "powershell"],
              "description": "Target shell"
            }
          },
          "examples": [
            "playground meta completions bash > ~/.bash_completion.d/playground",
            "playground meta completions zsh > ~/.zsh/completions/_playground"
          ]
        },
        "middleware": {
          "description": "Middleware operations",
          "subcommands": {
            "list": {
              "description": "List active middleware",
              "args": {},
              "examples": [
                "playground meta middleware list"
              ]
            }
          }
        },
        "telemetry": {
          "description": "Export execution metrics",
          "args": {
            "format": {
              "type": "positional",
              "required": false,
              "default": "json",
              "enum": ["json", "prometheus", "otlp"],
              "description": "Export format"
            },
            "output": {
              "type": "string",
              "alias": "o",
              "required": false,
              "description": "Output file path"
            }
          },
          "examples": [
            "playground meta telemetry",
            "playground meta telemetry prometheus",
            "playground meta telemetry json -o ./metrics.json"
          ]
        }
      }
    }
  },
  "globalArgs": {
    "quiet": {
      "type": "boolean",
      "alias": "q",
      "default": false,
      "description": "Suppress non-essential output"
    },
    "format": {
      "type": "string",
      "alias": "f",
      "default": "table",
      "enum": ["json", "yaml", "table", "latex"],
      "description": "Output format"
    },
    "output": {
      "type": "string",
      "alias": "o",
      "description": "Output file path"
    },
    "verbose": {
      "type": "boolean",
      "alias": "v",
      "default": false,
      "description": "Enable verbose output"
    },
    "config": {
      "type": "string",
      "alias": "c",
      "description": "Path to config file"
    }
  },
  "paperFamilies": {
    "imrad": {
      "name": "IMRAD",
      "description": "Introduction, Methods, Results, and Discussion",
      "sections": ["Introduction", "Methods", "Results", "Discussion", "Conclusion"]
    },
    "dsr": {
      "name": "Design Science Research",
      "description": "Design Science Research structure",
      "sections": ["Problem", "Objectives", "Design", "Demonstration", "Evaluation", "Communication"]
    },
    "argument": {
      "name": "Argument-based",
      "description": "Argument-based paper structure",
      "sections": ["Thesis", "Premises", "Arguments", "Counter-arguments", "Conclusion"]
    },
    "contribution": {
      "name": "Contribution",
      "description": "Research contribution structure",
      "sections": ["Motivation", "Background", "Contribution", "Validation", "Related Work", "Conclusion"]
    }
  },
  "thesisTypes": {
    "monograph": {
      "name": "Monograph",
      "description": "Traditional monograph thesis",
      "chapters": ["Introduction", "Literature Review", "Methodology", "Results", "Discussion", "Conclusion"]
    },
    "narrative": {
      "name": "Narrative",
      "description": "Narrative-style thesis",
      "chapters": ["Prologue", "Background", "Story", "Analysis", "Epilogue"]
    },
    "contribution": {
      "name": "Contribution-based",
      "description": "Publication-based thesis",
      "chapters": ["Introduction", "Paper 1", "Paper 2", "Paper 3", "Synthesis", "Conclusion"]
    }
  }
}
