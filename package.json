{
  "name": "unrdf-workspace",
  "version": "6.0.0-alpha.1",
  "description": "UNRDF v6 Monorepo - RDF Knowledge Graph Substrate Platform",
  "private": true,
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/unrdf/unrdf.git"
  },
  "bugs": {
    "url": "https://github.com/unrdf/unrdf/issues"
  },
  "homepage": "https://github.com/unrdf/unrdf#readme",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0",
    "pnpm": ">=7.0.0"
  },
  "scripts": {
    "prepare": "husky install",
    "test": "pnpm -r test",
    "test:fast": "pnpm -r test:fast",
    "test:watch": "pnpm -r test:watch",
    "test:watch:pkg": "bash -c './scripts/dev-workflow.sh test:watch \"$@\"' _",
    "test:coverage": "pnpm -r test -- --coverage",
    "test:core": "pnpm -C packages/core test",
    "test:hooks": "pnpm -C packages/hooks test",
    "test:federation": "pnpm -C packages/federation test",
    "test:streaming": "pnpm -C packages/streaming test",
    "test:browser": "pnpm -C packages/browser test",
    "test:cli": "pnpm -C packages/cli test",
    "test:knowledge-engine": "pnpm -C packages/knowledge-engine test",
    "lint": "pnpm -r --filter='!./packages/docs' --filter='!./packages/kgn' lint",
    "lint:fix": "pnpm -r --filter='!./packages/docs' --filter='!./packages/kgn' lint:fix",
    "format": "pnpm -r format",
    "format:check": "pnpm -r format:check",
    "build": "pnpm -r --filter ./packages build",
    "clean": "pnpm -r clean && rm -rf node_modules",
    "dev": "pnpm -r --parallel dev",
    "docs": "pnpm -C packages/core docs",
    "convert-paper": "node scripts/convert-paper.mjs",
    "precommit": "pnpm lint && pnpm test:fast",
    "quality": "node scripts/quality-report.mjs",
    "quality:json": "node scripts/quality-report.mjs --json",
    "setup-quality": "node scripts/setup-quality.mjs",
    "bench": "node scripts/bench-all.mjs",
    "bench:baseline": "node scripts/bench-all.mjs --baseline",
    "bench:hooks": "node benchmarks/hook-execution-bench.mjs",
    "bench:receipts": "node benchmarks/receipt-generation-bench.mjs",
    "bench:sparql": "node benchmarks/sparql-query-bench.mjs",
    "bench:tasks": "node benchmarks/task-activation-bench.mjs",
    "bench:workflow": "node benchmarks/workflow-e2e-bench.mjs",
    "benchmark": "node benchmarks/run-all.mjs all",
    "benchmark:core": "node benchmarks/run-all.mjs core",
    "benchmark:integration": "node benchmarks/run-all.mjs integration",
    "benchmark:advanced": "node benchmarks/run-all.mjs advanced",
    "benchmark:regression": "node benchmarks/run-all.mjs regression",
    "benchmark:report": "node benchmarks/run-all.mjs all",
    "benchmark:baseline": "node benchmarks/run-all.mjs regression --save-baseline",
    "benchmark:compare": "node benchmarks/run-all.mjs all --compare-baseline",
    "benchmark:memory": "node --expose-gc benchmarks/regression/memory-leak-detection.mjs",
    "profile:cpu": "node scripts/profile.mjs cpu",
    "profile:mem": "node scripts/profile.mjs mem",
    "profile:both": "node scripts/profile.mjs both",
    "quick-start": "./scripts/quick-start.sh",
    "validate": "./scripts/dev-workflow.sh validate",
    "validate:commit": "./scripts/dev-workflow.sh validate:commit",
    "fix": "./scripts/dev-workflow.sh fix",
    "new:package": "bash -c './scripts/common-tasks.sh new:package \"$@\"' _",
    "clean:all": "./scripts/common-tasks.sh clean:all",
    "update:deps": "./scripts/common-tasks.sh update:deps",
    "check:health": "./scripts/common-tasks.sh check:health",
    "list:packages": "./scripts/common-tasks.sh list:packages",
    "debug:test": "bash -c './scripts/debug-helpers.sh debug:test \"$@\"' _",
    "trace:otel": "./scripts/debug-helpers.sh trace:otel",
    "profile:perf": "bash -c './scripts/debug-helpers.sh profile:perf \"$@\"' _",
    "trace:deps": "bash -c './scripts/debug-helpers.sh trace:deps \"$@\"' _",
    "analyze:bundle": "bash -c './scripts/debug-helpers.sh analyze:bundle \"$@\"' _",
    "trace:imports": "bash -c './scripts/debug-helpers.sh trace:imports \"$@\"' _",
    "check:memory": "./scripts/debug-helpers.sh check:memory",
    "watch:logs": "bash -c './scripts/debug-helpers.sh watch:logs \"${@:-validation-output.log}\"' _"
  },
  "devDependencies": {
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.208.0",
    "@opentelemetry/instrumentation": "^0.208.0",
    "@opentelemetry/resources": "^2.2.0",
    "@opentelemetry/sdk-node": "^0.208.0",
    "@opentelemetry/sdk-trace-base": "^2.2.0",
    "@opentelemetry/sdk-trace-node": "^2.2.0",
    "@opentelemetry/semantic-conventions": "^1.38.0",
    "@types/node": "^25.0.3",
    "@vitest/browser": "^4.0.16",
    "@vitest/coverage-v8": "^4.0.16",
    "@vitest/ui": "^4.0.16",
    "citty": "^0.1.6",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jsdoc": "^61.4.1",
    "glob": "^13.0.0",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "jsdom": "^27.2.0",
    "prettier": "^3.0.0",
    "tinybench": "^6.0.0",
    "vitest": "^4.0.16"
  },
  "pnpm": {
    "overrides": {
      "@opentelemetry/api": "^1.7.0",
      "zod": "^4.1.13",
      "esbuild@<=0.24.2": ">=0.25.0",
      "@rdfjs/types": "^2.0.1"
    }
  },
  "volta": {
    "node": "18.19.0",
    "npm": "10.2.3",
    "pnpm": "8.15.0"
  },
  "dependencies": {
    "@comunica/query-sparql": "^4.5.0",
    "@noble/hashes": "^2.0.1",
    "@opentelemetry/api": "^1.9.0",
    "@rdfjs/dataset": "^2.0.2",
    "@unrdf/core": "workspace:*",
    "@unrdf/oxigraph": "workspace:*",
    "clownface": "^2.0.3",
    "fetch": "^1.1.0",
    "hash-wasm": "^4.12.0",
    "is-online": "^12.0.2",
    "isomorphic-fetch": "^3.0.0",
    "lru-cache": "^11.2.4",
    "oxigraph": "^0.5.2",
    "rdf-canonize": "^5.0.0",
    "rdf-ext": "^2.6.0",
    "rdf-validate-shacl": "^0.6.5",
    "sparqljs": "^3.7.3",
    "zod": "^3.25.76",
    "@unrdf/v6-compat": "workspace:*"
  }
}
