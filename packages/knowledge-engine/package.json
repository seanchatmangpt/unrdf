{
  "name": "@unrdf/knowledge-engine",
  "version": "5.0.1",
  "description": "UNRDF Knowledge Engine - Rule Engine, Inference, and Pattern Matching (Optional Extension)",
  "type": "module",
  "main": "src/index.mjs",
  "exports": {
    ".": "./src/index.mjs",
    "./query": "./src/query.mjs",
    "./canonicalize": "./src/canonicalize.mjs",
    "./parse": "./src/parse.mjs",
    "./ai-search": "./src/ai-enhanced-search.mjs"
  },
  "sideEffects": false,
  "files": [
    "src/",
    "dist/",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "test": "vitest run --coverage",
    "test:fast": "vitest run --coverage",
    "test:watch": "vitest --coverage",
    "build": "node build.config.mjs",
    "lint": "eslint src/ test/ --max-warnings=0",
    "lint:fix": "eslint src/ test/ --fix",
    "format": "prettier --write src/ test/",
    "format:check": "prettier --check src/ test/",
    "clean": "rm -rf dist/ .nyc_output/ coverage/",
    "dev": "echo 'Development mode for @unrdf/knowledge-engine'"
  },
  "keywords": [
    "rdf",
    "knowledge-engine",
    "inference",
    "reasoning",
    "rules"
  ],
  "dependencies": {
    "@iarna/toml": "^2.2.5",
    "@noble/hashes": "^1.5.0",
    "@unrdf/core": "workspace:*",
    "@unrdf/oxigraph": "workspace:*",
    "@unrdf/streaming": "workspace:*",
    "@xenova/transformers": "^2.17.2",
    "eyereasoner": "^18.23.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "vitest": "^4.0.15"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/unrdf/unrdf.git",
    "directory": "packages/knowledge-engine"
  },
  "bugs": {
    "url": "https://github.com/unrdf/unrdf/issues"
  },
  "homepage": "https://github.com/unrdf/unrdf#readme",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  }
}
