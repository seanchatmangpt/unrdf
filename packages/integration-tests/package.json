{
  "name": "@unrdf/integration-tests",
  "version": "5.1.0",
  "description": "Phase 5: Comprehensive Integration & Adversarial Tests (75 tests)",
  "type": "module",
  "private": true,
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:chains": "vitest run test/chains/",
    "test:adversarial": "vitest run test/adversarial/",
    "test:workflows": "vitest run workflows/",
    "test:federation": "vitest run federation/",
    "test:streaming": "vitest run streaming/",
    "test:error-recovery": "vitest run error-recovery/",
    "test:performance": "vitest run performance/",
    "test:flaky": "vitest run --retry 3",
    "clean": "rm -rf coverage/ .vitest/"
  },
  "keywords": [
    "integration-tests",
    "adversarial-tests",
    "unrdf",
    "workflow",
    "federation",
    "streaming",
    "security",
    "rdf"
  ],
  "dependencies": {
    "@unrdf/yawl": "workspace:*",
    "@unrdf/hooks": "workspace:*",
    "@unrdf/kgc-4d": "workspace:*",
    "@unrdf/kgc-multiverse": "workspace:*",
    "@unrdf/federation": "workspace:*",
    "@unrdf/streaming": "workspace:*",
    "@unrdf/oxigraph": "workspace:*",
    "@unrdf/receipts": "workspace:*",
    "@unrdf/core": "workspace:*",
    "hash-wasm": "^4.12.0",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^4.0.15",
    "vitest": "^4.0.15"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=7.0.0"
  }
}
