  "type": "module",
  "exports": {
    ".": "./src/index.mjs",
    "./run-capsule": "./src/run-capsule.mjs",
    "./checkpoint": "./src/checkpoint.mjs",
    "./autonomy-guard": "./src/autonomy-guard.mjs",
    "./shard-merge": "./src/shard-merge.mjs",
    "./async-workflow": "./src/async-workflow.mjs",
    "./projection": "./src/projection.mjs"
  },
  "main": "./src/index.mjs",
