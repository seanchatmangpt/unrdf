  \draw[thick] (0,0) -- (8,0) -- (8,5) -- (0,5) -- cycle;

  % X axis
  \node at (1,-.3) {BB80/20};
  \node at (3,-.3) {TDD};
  \node at (5,-.3) {Agile};
  \node at (7,-.3) {Waterfall};

  % Y axis label
  \node at (-0.3,2.5) [rotate=90] {Time (hours)};

