  "type": "module",
  "exports": {
    ".": "./src/index.mjs",
    "./batch-receipt-generator": "./src/batch-receipt-generator.mjs",
    "./merkle-batcher": "./src/merkle-batcher.mjs"
  },
  "main": "./src/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
