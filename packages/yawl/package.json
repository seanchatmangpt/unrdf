{
  "name": "@unrdf/yawl",
  "version": "6.0.0",
  "description": "YAWL (Yet Another Workflow Language) engine with KGC-4D time-travel and receipt verification",
  "type": "module",
  "main": "src/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": "./src/index.mjs",
    "./api": "./src/api/workflow-api.mjs",
    "./graphql-api": "./src/api/graphql-api.mjs",
    "./ontology": "./src/ontology/yawl-ontology.mjs",
    "./store": "./src/store/yawl-store.mjs",
    "./types": "./src/types/yawl-types.mjs",
    "./schemas": "./src/types/yawl-schemas.mjs",
    "./hooks": "./src/hooks/yawl-hooks.mjs",
    "./resources": "./src/resources/yawl-resources.mjs",
    "./cancellation": "./src/cancellation/index.mjs",
    "./receipt": "./src/receipt.mjs",
    "./blockchain-receipts": "./src/blockchain-receipts.mjs",
    "./visualization": "./src/visualization/live-workflow-viz.mjs"
  },
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:performance:baseline": "vitest run test/performance-baseline.test.mjs",
    "test:performance:regression": "vitest run test/performance-regression.test.mjs",
    "test:performance": "npm run test:performance:baseline && npm run test:performance:regression",
    "lint": "eslint src/ test/ --max-warnings=0",
    "lint:fix": "eslint src/ test/ --fix",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.mjs\" \"test/**/*.mjs\"",
    "format:check": "prettier --check \"src/**/*.mjs\" \"test/**/*.mjs\"",
    "validate": "npm run lint && npm run typecheck && npm run test",
    "build": "unbuild && tsc --emitDeclarationOnly",
    "build:types": "tsc --emitDeclarationOnly",
    "build:prod": "NODE_ENV=production unbuild",
    "prepublishOnly": "pnpm run build:prod"
  },
  "keywords": [
    "workflow",
    "yawl",
    "van-der-aalst",
    "petri-net",
    "bpmn",
    "rdf",
    "time-travel"
  ],
  "dependencies": {
    "@graphql-tools/schema": "^10.0.6",
    "@noble/ed25519": "^2.1.0",
    "@observablehq/plot": "^0.6.16",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/resources": "^1.28.0",
    "@opentelemetry/sdk-trace-base": "^1.28.0",
    "@opentelemetry/semantic-conventions": "^1.28.0",
    "@unrdf/hooks": "workspace:*",
    "@unrdf/kgc-4d": "workspace:*",
    "@unrdf/oxigraph": "workspace:*",
    "d3": "^7.9.0",
    "graphql": "^16.9.0",
    "hash-wasm": "^4.11.0",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@noble/hashes": "^2.0.1",
    "eslint": "^8.0.0",
    "jsdom": "^27.4.0",
    "vitest": "^4.0.15"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=7.0.0"
  },
  "sideEffects": false,
  "files": [
    "src/",
    "dist/",
    "README.md"
  ],
  "publishConfig": {
    "access": "public"
  }
}
