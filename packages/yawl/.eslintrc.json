{
  "extends": [
    "../../.eslintrc.json"
  ],
  "env": {
    "es2024": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "max-lines": ["error", {
      "max": 500,
      "skipBlankLines": true,
      "skipComments": true
    }],
    "max-lines-per-function": ["error", {
      "max": 40,
      "skipBlankLines": true,
      "skipComments": true
    }],
    "complexity": ["error", 10],
    "max-depth": ["error", 3],
    "max-nested-callbacks": ["error", 3],
    "max-params": ["error", 4],
    "max-statements": ["error", 20],
    "no-console": "off",
    "no-unused-vars": ["error", {
      "argsIgnorePattern": "^_",
      "varsIgnorePattern": "^_"
    }]
  },
  "overrides": [
    {
      "files": ["test/**/*.mjs", "**/*.test.mjs"],
      "rules": {
        "max-lines-per-function": "off",
        "max-statements": "off"
      }
    }
  ]
}
