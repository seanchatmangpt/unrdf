@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix unmetric: <http://example.org/unrdf/metrics#> .

# UNRDF Code Metrics Ontology
# Models code complexity metrics: cyclomatic complexity, Halstead volume, maintainability index

# Root Report Class

unmetric:ComplexityReport
  a rdfs:Class ;
  rdfs:label "Complexity Report" ;
  rdfs:comment "A code complexity analysis report for a project or file" .

# File-level Metrics

unmetric:FileComplexity
  a rdfs:Class ;
  rdfs:label "File Complexity" ;
  rdfs:comment "Code complexity metrics for a single file" .

# Function-level Metrics

unmetric:FunctionComplexity
  a rdfs:Class ;
  rdfs:label "Function Complexity" ;
  rdfs:comment "Code complexity metrics for a single function or method" .

# Properties: Metrics

unmetric:cyclomatic
  a rdf:Property ;
  rdfs:label "Cyclomatic Complexity" ;
  rdfs:comment "Cyclomatic complexity score (number of linearly independent paths)" ;
  rdfs:range xsd:integer .

unmetric:halsteadVolume
  a rdf:Property ;
  rdfs:label "Halstead Volume" ;
  rdfs:comment "Halstead volume measure (code information content)" ;
  rdfs:range xsd:double .

unmetric:maintainabilityIndex
  a rdf:Property ;
  rdfs:label "Maintainability Index" ;
  rdfs:comment "Maintainability index (0-100, higher is better)" ;
  rdfs:range xsd:double .

unmetric:linesOfCode
  a rdf:Property ;
  rdfs:label "Lines of Code" ;
  rdfs:comment "Physical lines of code count" ;
  rdfs:range xsd:integer .

unmetric:location
  a rdf:Property ;
  rdfs:label "Source Location" ;
  rdfs:comment "File path or function start line" ;
  rdfs:range xsd:string .

# Properties: Relationships

unmetric:hasFileComplexity
  a rdf:Property ;
  rdfs:label "Has File Complexity" ;
  rdfs:comment "Report contains complexity analysis for file" ;
  rdfs:domain unmetric:ComplexityReport ;
  rdfs:range unmetric:FileComplexity .

unmetric:hasFunctionComplexity
  a rdf:Property ;
  rdfs:label "Has Function Complexity" ;
  rdfs:comment "File contains function/method complexity analysis" ;
  rdfs:domain unmetric:FileComplexity ;
  rdfs:range unmetric:FunctionComplexity .

# Properties: Metadata

unmetric:analysisMode
  a rdf:Property ;
  rdfs:label "Analysis Mode" ;
  rdfs:comment "Mode of complexity analysis: off, observe, or enforce" ;
  rdfs:range xsd:string .

unmetric:filesAnalyzed
  a rdf:Property ;
  rdfs:label "Files Analyzed" ;
  rdfs:comment "Number of files analyzed in this report" ;
  rdfs:range xsd:integer .

unmetric:analysisTimestamp
  a rdf:Property ;
  rdfs:label "Analysis Timestamp" ;
  rdfs:comment "ISO 8601 timestamp of analysis execution" ;
  rdfs:range xsd:dateTime .

# Properties: Severity Flags

unmetric:highComplexity
  a rdf:Property ;
  rdfs:label "High Complexity Flag" ;
  rdfs:comment "Boolean flag indicating high cyclomatic complexity (CC > 10)" ;
  rdfs:range xsd:boolean .

unmetric:lowMaintainability
  a rdf:Property ;
  rdfs:label "Low Maintainability Flag" ;
  rdfs:comment "Boolean flag indicating low maintainability index (MI < 50)" ;
  rdfs:range xsd:boolean .
